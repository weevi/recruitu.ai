    <script>
    document.querySelector('.analyze-btn').addEventListener('click', function() {
        // Show loading screen
        const loadingScreen = document.querySelector('.loading-screen');
        loadingScreen.style.opacity = '0';
        loadingScreen.style.display = 'flex';
        
        // Trigger reflow
        loadingScreen.offsetHeight;
        
        // Fade in
        loadingScreen.style.opacity = '1';
        loadingScreen.style.transition = 'opacity 0.3s ease';

        // Loading messages sequence
        const loadingTexts = [
            'Analyzing physical metrics...',
            'Calculating performance scores...',
            'Comparing with D1 standards...',
            'Generating your potential report...'
        ];

        let textIndex = 0;
        const textInterval = setInterval(() => {
            document.querySelector('.loader-text').textContent = loadingTexts[textIndex];
            textIndex = (textIndex + 1) % loadingTexts.length;
        }, 1500);

        // Show results after delay
        setTimeout(function() {
            clearInterval(textInterval);
            loadingScreen.style.opacity = '0';
            
            setTimeout(() => {
                loadingScreen.style.display = 'none';
                
                // Show results
                const resultsScreen = document.querySelector('.results-screen');
                resultsScreen.style.opacity = '0';
                resultsScreen.style.display = 'block';
                
                // Trigger reflow
                resultsScreen.offsetHeight;
                
                // Fade in results
                resultsScreen.style.opacity = '1';
                resultsScreen.style.transition = 'opacity 0.3s ease';
                
                // Smooth scroll to results
                resultsScreen.scrollIntoView({ behavior: 'smooth' });
            }, 300);
        }, 6000);
    });

    function showSubscriptionPlans() {
        const overlay = document.querySelector('.subscription-overlay');
        overlay.style.display = 'flex';
        setTimeout(() => {
            overlay.classList.add('active');
            document.body.style.overflow = 'hidden';
        }, 10);
    }

    function hideSubscriptionPlans() {
        const overlay = document.querySelector('.subscription-overlay');
        overlay.classList.remove('active');
        document.body.style.overflow = '';
        setTimeout(() => {
            overlay.style.display = 'none';
        }, 300);
    }

    // Add click handler for plan buttons
    document.querySelectorAll('.plan-btn').forEach(button => {
        button.addEventListener('click', function() {
            const planName = this.closest('.plan').querySelector('h3').textContent;
            const planPrice = this.closest('.plan').querySelector('.price').textContent;
            showPaymentMethods(planName, planPrice);
        });
    });

    function showPaymentMethods(planName, planPrice) {
        // Hide subscription overlay
        document.querySelector('.subscription-overlay').classList.remove('active');
        
        // Update selected plan details
        document.querySelector('.selected-plan .plan-name').textContent = planName;
        document.querySelector('.selected-plan .plan-price').textContent = planPrice;
        
        // Show payment overlay
        const paymentOverlay = document.querySelector('.payment-overlay');
        paymentOverlay.style.display = 'flex';
        setTimeout(() => {
            paymentOverlay.classList.add('active');
        }, 10);
    }

    function hidePaymentMethods() {
        const paymentOverlay = document.querySelector('.payment-overlay');
        paymentOverlay.classList.remove('active');
        setTimeout(() => {
            paymentOverlay.style.display = 'none';
        }, 300);
    }

    // Add click handler for continue payment button
    document.querySelector('.continue-payment-btn').addEventListener('click', function() {
        const selectedMethod = document.querySelector('input[name="payment"]:checked').id;
        alert(`Processing payment with ${selectedMethod}... This would typically connect to a payment processor.`);
    });

    // Close payment overlay when clicking outside
    document.querySelector('.payment-overlay').addEventListener('click', function(e) {
        if (e.target === this) {
            hidePaymentMethods();
        }
    });
</script>

