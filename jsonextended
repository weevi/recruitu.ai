<script>
// Show payment modal when a plan is selected
function showPaymentModal(planName, planPrice) {
    document.querySelector('.selected-plan-name').textContent = planName;
    document.querySelector('.selected-plan-price').textContent = planPrice;
    document.querySelector('.payment-method-modal').style.display = 'flex';
}

// Hide payment modal
function hidePaymentModal() {
    document.querySelector('.payment-method-modal').style.display = 'none';
}

// Handle payment method selection
function selectPaymentMethod(method) {
    if (method === 'card') {
        document.querySelector('.payment-method-modal').style.display = 'none';
        document.querySelector('.card-payment-form').style.display = 'flex';
        document.querySelector('.card-payment-form .button-price').textContent = 
            document.querySelector('.selected-plan-price').textContent;
    } else {
        // Handle other payment methods (PayPal, Apple Pay, Google Pay)
        handleAlternativePayment(method);
    }
}

// Hide card form
function hideCardForm() {
    document.querySelector('.card-payment-form').style.display = 'none';
    document.querySelector('.payment-method-modal').style.display = 'flex';
}

// Format card number with spaces
function formatCardNumber(input) {
    let value = input.value.replace(/\s+/g, '').replace(/[^0-9]/gi, '');
    let formattedValue = value.match(/.{1,4}/g)?.join(' ') || value;
    input.value = formattedValue;
}

// Format expiry date
function formatExpiryDate(input) {
    let value = input.value.replace(/\D/g, '');
    if (value.length >= 2) {
        value = value.slice(0,2) + '/' + value.slice(2);
    }
    input.value = value;
}

// Format CVV
function formatCVV(input) {
    input.value = input.value.replace(/\D/g, '');
}

// Process card payment
async function processCardPayment(event) {
    event.preventDefault();
    const button = event.target.querySelector('.submit-button');
    const buttonText = button.querySelector('.button-text');
    const originalText = buttonText.textContent;

    try {
        // Disable button and show loading state
        button.disabled = true;
        buttonText.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Processing...';

        // Simulate payment processing
        await new Promise(resolve => setTimeout(resolve, 2000));

        // Show success message
        alert('Payment successful! Thank you for your purchase.');
        
        // Hide payment form
        document.querySelector('.card-payment-form').style.display = 'none';
        
        // Redirect to success page or dashboard
        // window.location.href = '/dashboard';

    } catch (error) {
        alert('Payment failed. Please try again.');
    } finally {
        // Reset button state
        button.disabled = false;
        buttonText.textContent = originalText;
    }
}

// Handle alternative payment methods
function handleAlternativePayment(method) {
    const methodNames = {
        'paypal': 'PayPal',
        'apple-pay': 'Apple Pay',
        'google-pay': 'Google Pay'
    };
    
    alert(`Redirecting to ${methodNames[method]} payment...`);
    // Here you would typically redirect to the respective payment provider
}

// Close modals when clicking outside
window.onclick = function(event) {
    if (event.target.classList.contains('payment-method-modal')) {
        hidePaymentModal();
    } else if (event.target.classList.contains('card-payment-form')) {
        hideCardForm();
    }
}
</script>

<!-- Add Stripe script at the end of the body -->
<script async src="https://js.stripe.com/v3/buy-button.js"></script>

<style>
/* Add these styles to customize the Stripe button appearance */
stripe-buy-button {
    width: 100%;
    margin-top: 1rem;
}

/* Optional: Style the Stripe button to match your theme */
stripe-buy-button::part(button) {
    width: 100%;
    background: var(--accent-color);
    border-radius: 8px;
    font-family: 'Roboto', sans-serif;
    font-weight: 600;
    transition: all 0.3s ease;
}

stripe-buy-button::part(button):hover {
    transform: translateY(-2px);
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
}

/* Additional style for the featured plan button */
.plan.featured stripe-buy-button::part(button) {
    background: var(--accent-color);
    box-shadow: 0 5px 15px rgba(255, 45, 45, 0.2);
}
</style>

<script>
// Add scroll event listener for navigation bar
window.addEventListener('scroll', function() {
    const nav = document.querySelector('nav');
    if (window.scrollY > 50) {
        nav.classList.add('scrolled');
    } else {
        nav.classList.remove('scrolled');
    }
});

// Add click handler for profile button
document.querySelector('.profile-btn').addEventListener('click', function(e) {
    e.preventDefault();
    window.location.href = 'profile.html';
});
</script>

